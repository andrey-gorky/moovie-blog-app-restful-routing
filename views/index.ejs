<%- include("partials/header.ejs"); %>

<div class="ui text main container">

	<div class="ui huge header">RESTful Movie Blog App</div>

	<% moviesEjs.reverse().forEach(function(movies) { %>

	<div class="ui top attached segment">

		<div class="item">

			<h2><%= movies.title %> (<%= movies.release %>)</h2>
			<img class="ui centered rounded image" src="<%= movies.poster %>" alt="">
			<!-- <p><%= movies.plot.substring(0, 100) %>...</p> -->
			<a class="ui blue basic button" href="/movies/<%= movies._id %>">Read More</a>

		</div>

	</div>

	<% }); %>

</div>

<%- include("partials/footer.ejs"); %>